{{ block "base" . }}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title></title>
        <link href="public/css/main.css" rel="stylesheet">
        <link href="public/css/utils.css" rel="stylesheet">
        <script src="https://unpkg.com/htmx.org@2.0.4" integrity="sha384-HGfztofotfshcF7+8n44JQL2oJmowVChPTg48S+jvZoztPfvwD79OC/LTtG6dMp+" crossorigin="anonymous"></script>
        <script src="https://unpkg.com/lucide@latest"></script>
    </head>
    <meta
    name="htmx-config"
    content='{
    "responseHandling":[
    {"code":"204", "swap": false},
    {"code":"[45]..", "swap": true, "error":true},
    {"code":"200", "swap": true}
    ]
    }'
    />
    <body class="bg-[url('/public/images/bg-circles.svg')] bg-no-repeat bg-right bg-cover flex min-h-screen text-app-950 flex-col">
        <input type="hidden" name="csrf" value="{{ .csrf }}">
        {{ template "body" . }}
    </body>
    <script src="public/scripts/search_muscle_joints_movements.js"></script>
    <!--<script src="public/scripts/header.js"></script>-->
    <script>
        lucide.createIcons();
        document.body.addEventListener('htmx:beforeSwap', function (event) {
            if(event.detail.requestConfig.path == "/signin" && event.detail.requestConfig.verb == "post" && event.detail.xhr.status == 200) {
                event.detail.target = event.detail.xhr.status == 200 ? document.body : document.getElementById("signin-wrapper");
            }
        })

        function toggleExpand(role) {
            const content = document.getElementById(`content-${role}`);
            const icon = document.getElementById(`icon-${role}`);
            content.classList.toggle('hidden');
            icon.classList.toggle('rotate-180');
        }
    </script>
</html>
{{end}}
