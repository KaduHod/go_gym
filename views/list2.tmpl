{{block "list_exercises2" .}}
<div class="flex w-full h-full bg-neutral-900 box-border">
    <!-- Lista de Exercícios -->
    <div class="flex-1 w-1/4 p-4 rounded-lg shadow-lg
                min-h-[600px] max-h-[800px] overflow-y-auto opacity-0 -translate-y-5 transition-all duration-300 ease-out animate-fade-in bg-app-gradient h-fit">
        <h2 class="text-white text-lg font-semibold mb-3 flex items-center gap-2">
            <i data-lucide="dumbbell" class="text-red-500 w-5 h-5"></i>
            Exercises
        </h2>
        <ul class="space-y-2">
        {{ range .Exercises }}
            <li class="flex items-center gap-2 p-2 rounded-md cursor-pointer"
                hx-post="/exercises/details/{{ .Id }}"
                hx-target="#exercise-details"
                hx-swap="innerHTML"
                hx-trigger="click"
                hx-headers='js:{ "X-CSRF-Token": document.querySelector("[name=csrf]").value }'>
                <img src="/public/images/bar-white.svg" class="w-4 h-4 mr-2" alt="">
                <span class="text-white text-sm font-medium pb-[1px] transition-colors duration-200">
                    {{.Name}}
                </span>
            </li>
        {{ end }}
        </ul>
    </div>
    <!-- Área de Exibição -->
    <div id="exercise-details" class="flex-3 w-3/4 rounded-lg
                min-h-[600px] max-h-[800px] overflow-y-auto opacity-0 translate-y-5 transition-all duration-300 ease-out animate-fade-in">
        {{if .Exercise.Id }}
            {{ template "exercise_page" . }}
        {{end}}
    </div>
</div>
<script>
    lucide.createIcons();
</script>
{{end}}

