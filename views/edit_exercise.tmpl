{{ block "edit_exercise" . }}
<div class="w-full h-full p-6 mx-auto rounded-lg flex gap-6">
    <!-- Lista de Exercícios -->
    <form class="flex-1 w-1/4 p-4 rounded-lg
        min-h-[600px] bg-app-gradient shadow-lg max-h-[800px] overflow-y-auto opacity-0 -translate-x-10 transition-all duration-300 ease-out animate-fade-in-left">
        <h2 class="text-white text-lg font-semibold">Edit Exercise</h2>

        <label class="text-neutral-400 text-sm" for="name">Name</label>
        <input type="hidden" name="id" value="{{ .Exercise.Id }}">
        <input
        type="text"
        id="link"
        name="name"
        value="{{ .Exercise.Name }}"
        class="p-2 text-white rounded-md w-full"
        >


        <!-- Input para descrição -->
        <label class="text-neutral-400 text-sm" for="description">Description</label>
        <textarea
            rows="20"
            id="description"
            name="description"
            class="p-2 bg-neutral-800 text-white rounded-md w-full ">
            {{ .Exercise.Description }}
        </textarea>

        <!-- Input para link -->
        <label class="text-neutral-400 text-sm" for="link">Exercise Link</label>
        <input
        type="text"
        id="link"
        name="link"
        value="{{ .Exercise.Link }}"
        class="p-2 text-white rounded-md w-full ">

        <!-- Botão para buildar o exercício -->
        <button
            class="mt-3 app-input px-4 py-2 rounded-md hover:bg-red-600 transition-all"
            hx-post="/exercise/build/{{ .Exercise.Id }}"
            hx-target="#main"
            hx-swap="innerHTML"
            hx-trigger="click"
            hx-headers='js:{ "X-CSRF-Token": document.querySelector("[name=csrf]").value }'
            hx-indicator="#loading-indicator">
            Build Exercise
        </button>
        <div id="loading-indicator" class="hidden mt-2 text-white text-sm">Building...</div>
        <button
            class="mt-3 text-white px-4 py-2 rounded-md app-input transition-all"
            hx-target="#main"
            hx-swap="innerHTML"
            hx-trigger="click"
            hx-headers='js:{ "X-CSRF-Token": document.querySelector("[name=csrf]").value }'
            hx-patch="/exercise/{{ .Exercise.Id }}/save">
            Save Changes
        </button>
    </form>
    <!-- Área de Exibição -->
    <div id="exercise-details" class="flex w-3/4 rounded-lg
        min-h-[600px] max-h-[800px] overflow-y-auto opacity-0 translate-x-10 transition-all duration-300 ease-out animate-fade-in-right">
        {{ template "exercise_detail" . }}
    </div>
</div>
{{ end }}
